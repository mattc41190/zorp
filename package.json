{
  "name": "zorp",
  "version": "1.0.0",
  "description": "Tags that help you organize it",
  "main": "index.js",
  "standard": {
    "env": ["mocha"]
  },
  "scripts": {
    "start": "node index.js",
    "test": "npm run lint && npm run unit",
    "lint": "standard",
    "format": "standard --fix",
    "unit": "nyc --reporter=html mocha",
    "patch": "npm version patch && npm publish",
    "minor": "npm version minor && npm publish",
    "major": "npm version major && npm publish"
  },
  "keywords": [
    "organization",
    "organize",
    "tags",
    "files",
    "folders"
  ],
  "author": "Matthew Cale",
  "license": "ISC",
  "dependencies": {
    "pug": "^2.0.3"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "mocha": "^5.1.0",
    "mock-fs": "^4.4.2",
    "nyc": "^11.6.0",
    "standard": "^11.0.1"
  }
}